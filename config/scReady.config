################################################################################
# scReady Pipeline Configuration File
#
# This file contains all configurable parameters for the scReady pipeline.
# Each section is clearly marked and commented to explain the purpose
# of each parameter.
################################################################################

################################################################################
# DATA IMPORT PARAMETERS
#
# Parameters controlling the initial data import and basic quality thresholds
################################################################################
# Minimum number of cells required per sample
min.cells = 5

# Minimum number of features (genes) required per cell
min.features = 50

# Whether to perform ambient RNA removal using SoupX
ambient.removal = TRUE

################################################################################
# CITE-SEQ AND DEMULTIPLEXING PARAMETERS
#
# Parameters for processing CITE-seq data and cell demultiplexing
################################################################################
# Vector of HTO (Hashtag Oligonucleotide) names for cellhashR demultiplexing
# These should match the HTOs used in your experiment
HTO.features = c("HTO1", "HTO2", "HTO3", "HTO4", "HTO5", "HTO6")

# Algorithms that cellhashR can use for demultiplexing
# Options: "bff_cluster", "multiseq", "dropletutils"
demultiplex.algorims = c("bff_cluster", "multiseq", "dropletutils")

# Whether to normalize and scale ADT (Antibody-Derived Tag) data
ADT.normalize.scale = FALSE

# Path to the folder containing Souporcell results for SNP-based demultiplexing
souporcell_folder = "souporcell_results"

################################################################################
# QUALITY CONTROL PARAMETERS
#
# Parameters controlling quality control filtering and preprocessing
################################################################################
# Save Seurat objects as RDS files before QC filtering
save.pre_QC = FALSE

# Number of median absolute deviations (MAD) to exclude outliers
# Typical range: 3-5. Higher values are more permissive, lower more stringent.
n.mad = 4

# Number of highly variable genes to select for downstream analysis
var.features = 2000

# Maximum number of principal components (PCs) to calculate during PCA
# Acts as an upper bound for computational efficiency
max.pca = 40

# Proportion of variance (0-1) to retain from PCA
# Default: 0.90 for 90% variance explained
var.explained = 0.90

################################################################################
# EXPORT PARAMETERS
#
# Parameters controlling data export
################################################################################
# File type object to save scRNAseq pre-processed data
# Possible values: "Seurat", "AnnData" or "SingleCellExperiment"
file.type = "Seurat"

################################################################################
# DATA INTEGRATION PARAMETERS
#
# Parameters controlling data integration across samples or datasets
################################################################################
# Whether to perform data integration
integration = TRUE

# Method to use for data integration
# Possible values: "harmony" or "seurat"
integration.method = "harmony"

################################################################################
# NOTES:
#
# 1. For most parameters, the default values are suitable for typical
#    single-cell RNA-seq datasets with 10,000-50,000 cells.
#
# 2. For larger datasets (>100,000 cells) or complex multimodal datasets,
#    you may need to adjust parameters like var.features and max.pca.
#
# 3. When using CITE-seq or other multimodal data, ensure HTO.features
#    matches your experimental design.
#
# 4. The integration.method parameter is only used if integration = TRUE.
################################################################################
